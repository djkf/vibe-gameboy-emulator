{
  "name": "gameboy-emulator",
  "version": "1.0.0",
  "description": "Nintendo Game Boy emulator in TypeScript",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:run": "vitest --run",
    "test:ui": "vitest --ui",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "format": "prettier --write .",
    "analyze-rom": "tsx tools/rom-analyzer.ts",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "@types/node": "^24.0.3",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/ui": "^1.3.0",
    "eslint": "^8.56.0",
    "jsdom": "^26.1.0",
    "prettier": "^3.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.3.0",
    "vite": "^5.1.0",
    "vitest": "^1.3.0",
    "gh-pages": "^6.0.0"
  }
}
